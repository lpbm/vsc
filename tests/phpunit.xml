<phpunit
	bootstrap="./vsc_phpunittest_environment.php"
	colors="true"
	stopOnIncomplete="true"
	stopOnError="true"
	stopOnFailure="true"
	stopOnRisky="true"
	stopOnSkipped="true">
	<testsuites>
		<testsuite name="all">
			<directory suffix="Test.php">./lib</directory>
			<directory suffix="Test.php">./res</directory>
		</testsuite>
		<testsuite name="functions">
			<directory suffix="Test.php">./res/functions_inc</directory>
		</testsuite>
		<testsuite name="infrastructure">
			<directory suffix="Test.php">./lib/infrastructure</directory>
			<directory suffix="Test.php">./res/infrastructure</directory>
		</testsuite>
		<testsuite name="domain">
			<directory suffix="Test.php">./lib/domain</directory>
			<directory suffix="Test.php">./res/domain</directory>
		</testsuite>
		<testsuite name="application">
			<directory suffix="Test.php">./lib/application</directory>
			<directory suffix="Test.php">./res/application</directory>
		</testsuite>
		<testsuite name="presentation">
			<directory suffix="Test.php">./lib/presentation</directory>
			<directory suffix="Test.php">./res/presentation</directory>
		</testsuite>
		<testsuite name="sitemaps">
			<directory suffix="Test.php">./lib/application/sitemaps</directory>
			<directory suffix="Test.php">./res/application/sitemaps</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">../lib</directory>
			<directory suffix=".php">../res</directory>
			<exclude>
				<directory suffix=".php">../res/config</directory>
				<directory suffix=".php">../res/templates</directory>
			</exclude>
		</whitelist>
	</filter>
	<php>
		<server name="SCRIPT_NAME" value="test.php"/>
		<env name="SCRIPT_NAME" value="test.php"/>
	</php>
</phpunit>
